<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite">
    <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:background="@color/colorWhite">
        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/appThumbnailDraweeView"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                fresco:actualImageScaleType="centerCrop"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/transparent">

            <ImageView
                    android:id="@+id/imvClose"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:padding="1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:tint="@color/colorWhite"
                    android:src="@drawable/cross_24"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

        <LinearLayout
                android:id="@+id/lytDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="25dp">
            <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/ratingDraweeView"
                    android:layout_height="30dp"
                    android:layout_width="match_parent"
                    android:layout_margin="0dp"
                    fresco:actualImageScaleType="centerInside"/>
            <TextView
                    android:id="@+id/txvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="-"
                    android:textSize="19sp"
                    android:textColor="@color/colorGreen_20"/>
            <TextView
                    android:id="@+id/txvCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="-"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray_90"/>
            <TextView
                    android:id="@+id/txvProductId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="-"
                    android:textSize="14sp"
                    android:textColor="@color/colorCyan_50"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/txvRating"
                        android:layout_width="36dp"
                        android:layout_height="match_parent"
                        android:text="4.55"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:textColor="@color/colorGray_90"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:tint="@color/colorGray_90"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/txvDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="-"
                    android:textSize="15sp"
                    android:textColor="@color/colorGray_90"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>